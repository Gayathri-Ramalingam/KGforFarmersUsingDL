	<script>
		document.addEventListener('keydown', function (event) {
			if (event.key === 'Enter' || event.key === ' ') {  // Can adjust keys if needed
				const activeElement = document.activeElement;

				// Check if the active element has a click event attached to it
				if (activeElement && isClickable(activeElement)) {
					activeElement.click();
				}
			}
		});

		// Helper function to check if an element is clickable
		function isClickable(element) {
			// Check if the element has a click event attached (either inline or via JS)
			const clickEvent = getEventListeners(element).click;
			return clickEvent && clickEvent.length > 0;
		}

		setTimeout(function () {
			const focusableSelectors = [
				'a', 'button', 'input', 'textarea', 'select', 'label', 'nav',
				'h1', 'h2', 'h3', 'h4', 'h5', 'h6'
			];

			// Elements to ignore
			const ignoreSelectors = ['sup', 'sub', 'span', 'strong', 'em', 'b', 'i', 'small'];

			focusableSelectors.forEach(selector => {
				const elements = document.querySelectorAll(selector);
				elements.forEach(element => {
					if (!element.hasAttribute('tabindex') && !ignoreSelectors.includes(element.tagName.toLowerCase())) {
						element.setAttribute('tabindex', '0');
					}
				});
			});

			// Ensure `tabindex` is not applied to elements inside `role=button` or `role=link`
			const allElements = document.querySelectorAll('*');
			allElements.forEach(element => {
				const role = element.getAttribute('role');
				if (role === 'button' || role === 'link') {
					element.querySelectorAll('*').forEach(child => {
						if (child.hasAttribute('tabindex')) {
							child.removeAttribute('tabindex');
						}
					});
				}

				// Add tabindex="0" to parents of text nodes that don't already have tabindex, but ignore specific inline elements
				const textNodes = Array.from(element.childNodes).filter(node =>
					node.nodeType === Node.TEXT_NODE && node.nodeValue.trim() !== ''
				);

				if (textNodes.length > 0 &&
					!element.hasAttribute('tabindex') &&
					!ignoreSelectors.includes(element.tagName.toLowerCase())
				) {
					element.setAttribute('tabindex', '0');
				}
			});
		}, 1000);

	</script>


