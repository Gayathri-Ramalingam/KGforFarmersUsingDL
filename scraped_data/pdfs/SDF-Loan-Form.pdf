	<script>
				var languageVar = 0;

		const dialogTexts = {
			alert: {
				1: { ok: "Ok" },
				2: { ok: "ठीक है" }
			},
			confirm: {
				1: { yes: "Yes", no: "No" },
				2: { yes: "हाँ", no: "नहीं" }
			}
		};

		function showAlert(message) {
			const alertBox = document.getElementById('alertBox');
			if (!alertBox) return;

			const boxContent = alertBox.querySelector('.box-content');
			const alertOkButton = alertBox.querySelector('#customAlertOk');

			boxContent.textContent = message;
			alertOkButton.innerText = dialogTexts.alert[languageVar]?.ok || dialogTexts.alert[1].ok;

			alertBox.classList.remove('d-none');
			alertBox.setAttribute("tabindex", "-1");
			alertBox.focus();

			const handleClose = () => {
				alertBox.classList.add('d-none');
				alertOkButton.removeEventListener('click', handleClose);
			};

			alertOkButton.addEventListener('click', handleClose);
		}

		function confirmBox(message) {
			return new Promise((resolve) => {
				const confirmBox = document.getElementById('confirmBox');
				if (!confirmBox) return resolve(false);

				const msg = confirmBox.querySelector('.box-content');
				const yesBtn = document.getElementById('customConfirmYes');
				const noBtn = document.getElementById('customConfirmNo');

				if (!msg || !yesBtn || !noBtn) return resolve(false);

				msg.innerHTML = message;
				yesBtn.innerText = dialogTexts.confirm[languageVar]?.yes || dialogTexts.confirm[1].yes;
				noBtn.innerText = dialogTexts.confirm[languageVar]?.no || dialogTexts.confirm[1].no;

				confirmBox.classList.remove('d-none');
				confirmBox.setAttribute("tabindex", "-1");
				yesBtn.focus();

				const cleanup = () => {
					confirmBox.classList.add('d-none');
					yesBtn.removeEventListener('click', handleYes);
					noBtn.removeEventListener('click', handleNo);
				};

				const handleYes = () => { cleanup(); resolve(true); };
				const handleNo = () => { cleanup(); resolve(false); };

				yesBtn.addEventListener('click', handleYes, { once: true });
				noBtn.addEventListener('click', handleNo, { once: true });
			});
		}

		function updateVisibleDialogs() {
			const alertBox = document.getElementById('alertBox');
			const confirmBox = document.getElementById('confirmBox');

			if (alertBox && !alertBox.classList.contains('d-none')) {
				const okBtn = alertBox.querySelector('#customAlertOk');
				if (okBtn) {
					okBtn.innerText = dialogTexts.alert[languageVar]?.ok || dialogTexts.alert[1].ok;
				}
			}

			if (confirmBox && !confirmBox.classList.contains('d-none')) {
				const yesBtn = document.getElementById('customConfirmYes');
				const noBtn = document.getElementById('customConfirmNo');
				if (yesBtn && noBtn) {
					yesBtn.innerText = dialogTexts.confirm[languageVar]?.yes || dialogTexts.confirm[1].yes;
					noBtn.innerText = dialogTexts.confirm[languageVar]?.no || dialogTexts.confirm[1].no;
				}
			}
		}

		window.alert = showAlert;

		async function loadContent(languageId) {
			try {
				const results = await Promise.all([
					BindMainHeaderLogo(languageId),
					BindHeaderMenu(languageId),
					BindFooterMenu(languageId),
					GetManiHeadingText(languageId),
					GetVisitor(languageId),
					BindHeaderLogo(languageId)
				]);

				const langCode = languageId === 1 ? "en" : "hi";
				$("#arfSiteMap").attr("href", `/site-map/${langCode}`);
				$("#hrfAccess").attr("href", `/screen-reader-access/${langCode}`);
				$("#skipCon").html(languageId === 1 ? "Skip to Main Content" : "मुख्य सामग्री पर जाएँ");
				$("#Idtitle").html(languageId === 1 ?
					"Official Website of Department of Food and Public Distribution, Ministry of Consumer Affairs, Food and Public Distribution, Government of India." :
					"खाद्य और सार्वजनिक वितरण विभाग, उपभोक्ता मामले, खाद्य और सार्वजनिक वितरण मंत्रालय, भारत सरकार की आधिकारिक वेबसाइट.");

				return results;
			} catch (error) {
				console.error('Error loading content:', error);
				showAlert('Error loading content. Please try again.');
				throw error;
			}
		}

		$(document).ready(async function () {
			try {
				// Set initial language
				languageVar = getPathParam() === "hi" ? 2 : 1;
				$("#LanguageId").val(languageVar);

				// Load initial content
				await loadContent(languageVar);
				await Promise.all([
					BindSocialMediaLogo(),
					BindSliderDepartmentLogo()
				]);

				// Handle language change
				$("#LanguageId").change(async function () {
					try {
						const newLanguageId = parseInt($(this).val());
						const prevLanguage = languageVar;

						// Store the confirmation message before changing language
						const confirmMessage = newLanguageId === 1
							? "क्या आप वेबसाइट की भाषा अंग्रेजी में परिवर्तित करना चाहते हैं?"
							: "Do you want to change website language in Hindi?";

						// Show confirmation in current language
						const confirmed = await confirmBox(confirmMessage);

						if (confirmed) {
							languageVar = newLanguageId;
							await loadContent(newLanguageId);
							updateVisibleDialogs();
						} else {
							languageVar = prevLanguage;
							$(this).val(prevLanguage);
							updateVisibleDialogs();
						}
					} catch (error) {
						console.error('Error changing language:', error);
						showAlert('Error changing language. Please try again.');
						$(this).val(languageVar);
					}
				});
			} catch (error) {
				console.error('Error in initialization:', error);
				showAlert('Error initializing page. Please refresh and try again.');
			}
		});

		function getPathParam() {
			return window.location.pathname.split('/').pop() || "en";
		}

		function GetVisitor(languageId) {
			return $.get('/Admin/Home/SaveVisitorByLanguage', { languageId });
		}

		function GetManiHeadingText(languageId) {
			return $.get('/Admin/Home/GetMainHeading', { languageId }).done(data => {
				$("#pTollFreeNo").html(data.headingTollFreeNumber);
				$("#pONORCno").html(data.headingONORCTollFreeNumber);
				$("#sSkipContent").html(data.headingSkiptoMainConten);
				$("#sScreenReader").html(data.headingScreenReaderAccess);
			});
		}

		function BindHeaderMenu(languageId) {
			return $.get('/Admin/Home/Header', { languageId }, content => $("#divHeaderMenu").html(content));
		}

		function BindMainHeaderLogo(languageId) {
			return $.get('/Admin/Home/MainHeaderLogo', { languageId }, content => $("#DivMainHeaderLogo").html(content));
		}

		function BindSocialMediaLogo() {
			return $.get('/Admin/Home/SocialMediaLogo', content => $("#DivSocialMedia").html(content));
		}

		function BindHeaderLogo(languageId) {
			return $.get('/Admin/Home/HeaderLogo', { languageId }, content => $("#HeaderLogo").html(content));
		}

		function BindSliderDepartmentLogo() {
			return $.get('/Admin/Home/DepartmentSliderFooterLogo', content => $("#DivSliderDepartmentFooterLogo").html(content));
		}

		function BindFooterMenu(languageId) {
			return $.get('/Admin/Home/FooterMenu', { languageId }, content => $("#divFooter").html(content));
		}
	</script>

